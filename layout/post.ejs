<div class="row content-post">
    <article>
                
        <% page.photos.forEach(function(photo){ %>
            <div class="photos">
                <img src="<%- url_for(photo) %>" alt="<%= page.title %>">
            </div>
        <% }) %>
        
        <% if (page.video){ %>
            <div class="video-container">
                <iframe src="//www.youtube.com/embed/<%= page.video %>" frameborder="0" allowfullscreen></iframe>
            </div>
        <% } %> 

        <p class="content-meta">
            <span class = "meta-title"><%= page.title %></span>

            <%= date(page.date) %>

            <% if (page.categories && page.categories.length){ %>
              <span class="meta-cat">
                <%- list_categories(page.categories, {
                  show_count: false,
                  style: 'none',
                  separator: ', '
                }) %>
              </span>
            <% } %>
        </p>

        <div class="content">
            <%- page.content %>
        </div>

    </article>
    
    <div class="content-nav">

        <% if (page.prev){ %>
            <a href="<%- url_for(config.root + page.prev.path) %>" class = "prev-page" title="<%-page.prev.title %>">&larr; Prev</a>
        <% } %>

        <% if (page.next){ %>
            <a href="<%- url_for(config.root + page.next.path) %>" title="<%-page.next.title %>">Next &rarr;</a>
        <% } %>
        <div class="clear"></div>

    </div>

</div>

<div class="row comment" >

</div>