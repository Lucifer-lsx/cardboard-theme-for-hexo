*, *:before, *:after
    -webkit-box-sizing: border-box
    -moz-box-sizing: border-box
    box-sizing: border-box

html
    -webkit-text-size-adjust: 100%
    -ms-text-size-adjust: 100%
    overflow-y: scroll

body, h1, h2, h3, h4, h5, h6,
p, blockquote, pre, hr, td, th,
dl, dd, ol, ul, figure
    margin: 0

code
    color: light-black
    font-family: Monaco, Menlo, Consolas, monospace
    border-bottom: border-thin
    padding: 1px 5px

a
    text-decoration: none

h1,h2,h3,h4,h5,h6
    font-weight: 400
    line-height: 2
    
nav ul
    list-style: none
    padding: 0
    margin:0

nav li
    float:left

li ul, li ol
    margin-bottom: 0

table 
    border-collapse: collapse
    border-spacing: 0
    
td, th
  padding: 0

img 
    border: 0
    max-width: 100%

pre 
    white-space: pre
    white-space: pre-wrap
    word-wrap: break-word

small 
    font-size: 80%

hr 
    -moz-box-sizing: content-box
    box-sizing: content-box
    height: 0
    margin-top: 40px
    margin-bottom: 40px
    border: 0
    border-top: border-thiner

dt
    font-weight: 700

button,
html input[type="button"],
input[type="reset"],
input[type="submit"] 
    -webkit-appearance: button
    cursor: pointer

.clear,header,footer,article,nav,section,aside
    display: block

.clear:after,header:after,footer:after,article:after,
nav:after,section:after,aside:after
    content: " "
    display: block
    height: 0
    clear: both
    visibility: hidden

/*
    Responsive iframe
*/
.video-container
    position: relative
    padding-top: (9 / 16 * 100)% // 16:9 ratio
    height: 0
    overflow: hidden
    margin-bottom: 40px

    iframe, object, embed
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%
        margin-top: 0

.clear
    clear: both

.row
    width: 90%
    max-width: 1000px
    margin-left: auto
    margin-right: auto

.site-header, .site-content
    margin-bottom: block-60
    
body,button,input,select,textarea
    font-family: sans-serif
    font-size: 15px
    color: basic-black
    line-height: 1.5

table thead
    border-bottom: border-default

table th
    padding: 12px 15px

table td
    padding: 10px 15px
    font-size: 12px
    line-height: 1.5

table tr:hover td 
    background: plain-background

::-moz-selection 
    background: color-slc
    text-shadow: none

::selection 
    background: color-slc
    text-shadow: none

#content
    overflow: hidden

